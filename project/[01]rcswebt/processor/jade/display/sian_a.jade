//output:../../../publish/html/display/sian_a.html

include ../include/jadeUtil.jade
doctype html
html(lang='ko')
  include ../include/head.jade
  +linkRel('stylesheet', 'text/css', '../css/sian_a.css', 'all')
  body
    include ../include/skipNavi.jade
    .header_wrap
      header.header
        .inner_header  
          h1.logo
            a(href="javascript:void(0);") 
              img(src="../images/dummy/sian_a/logo.png", alt="RCS WEB Template")
          nav
            ul
              li.node1: a(href="javascript:void(0);") 서비스 관리
              li.node1: a(href="javascript:void(0);") 메세지 관리
              li.node1: a(href="javascript:void(0);") 발송통계
              li.node1: a(href="javascript:void(0);") 공지사항
              li.node1: a(href="javascript:void(0);") 관리
            .util_wrap
              a(href="javascript:void(0);").btn.btn_login 

    .container
      article#content.content
        .emulator_wrap
          .emulator_head
            h2.title 메세지발송
            a(href="javascript:void(0);").btn.link 
              span 메세지 보관함
          .emulator_cont
            .item_bundle
              strong.tit_bundle 브랜드양식
              .cont_bundle
                .cont_flex_bundle
                  span.custom_select
                    select(name="" id="" title="브랜드명을 선택 해주세요")
                      option(value="") 브랜드명을 선택해주세요.
                      -for(i=1; i < 10; i++)
                        option(value="") Brand00#{i} (브랜드명)
                  span.custom_select
                    select(name="" id="" title="양식을 선택 해주세요")
                      option(value="") 양식을 선택 해주세요.
                      -for(i=1; i < 10; i++)
                        option(value="") Tmplt00#{i} (템플릿명)
            .accordion_wrap  
              .accordion_container
                .accordion_content
                  h2.blind 메세지작성 탭
                  .accordion_head
                    a(href="javascript:void(0)")
                      h3.accordion_title 메시지 작성
                  .accordion_body
                    .item_bundle
                      strong.tit_bundle 이미지
                      .cont_bundle
                        .box_add_files
                          span.custom_input
                            input(type="text" id="file_route01" readonly)
                            input(type="file" id="file_bt01" onchange="javascript:document.getElementById('file_route01').value=this.value").ui_skip
                          label(for="file_bt01").btn.gray.mid.btn_add_files <span>파일업로드</span>
                          p.caution ※ 가로 284 세로 500 사이즈의 이미지를 등록 해주세요.
                    .item_bundle
                      strong.tit_bundle 타이틀
                      .cont_bundle
                        span.custom_input
                          input(type="text" placeholder="타이틀 입력")
                    
                    .item_bundle
                      strong.tit_bundle 내용
                      .cont_bundle
                        .custom_textarea
                          textarea(placeholder="변수로 설정하고자 하는 내용을 {} 표시로 작성해주세요. 예) 이름과 출금일을 변수설정 : {이름}님 OO카드 {출금일} 출금예정입니다.")
                        p.caution ※ 최대 90byte
                    
                    .item_bundle
                      strong.tit_bundle 버튼
                      .cont_bundle
                        .box_table
                          .box_th 
                            strong.title 버튼1
                          .box_td
                            .cont_flex_bundle
                              span.custom_select
                                select(name="" id="" title="복사하기")
                                  option 복사하기
                                  option 복사하기
                                  option 복사하기
                              span.custom_input.input_btn
                                input(type="text" placeholder="버튼명 입력")
                              span.custom_input.full_width
                                input(type="text" placeholder="액션내용 입력")
                        .box_table
                          .box_th 
                            strong.title 버튼2
                          .box_td
                            span.custom_select.half_width
                              select(name="" id="" title="액션선택")
                                option 액션선택
                                option 액션선택
                                option 액션선택
                    .item_bundle
                      strong.tit_bundle 광고
                      .cont_bundle
                        .cont_block_bundle
                          span.custom_radio
                            input(type="radio" name="ad_Radio" id="ad_CheckRadio01")
                            label(for="ad_CheckRadio01") 미표시
                          span.custom_radio
                            input(type="radio" name="ad_Radio" id="ad_CheckRadio02")
                            label(for="ad_CheckRadio02") 표시
                        .cont_block_bundle
                          .box_add_input
                            strong.title 무료수신거부
                            span.custom_input
                              input(type="text" placeholder="080-1234-1234")
                    
                    .item_bundle
                      strong.tit_bundle Fallback
                      .cont_bundle
                        .cont_block_bundle
                          span.custom_radio
                            input(type="radio" name="fallback_Radio" id="fallbackRadio01")
                            label(for="fallbackRadio01") 미사용
                          span.custom_radio
                            input(type="radio" name="fallback_Radio" id="fallbackRadio02")
                            label(for="fallbackRadio02") SMS발송
                          span.custom_radio
                            input(type="radio" name="fallback_Radio" id="fallbackRadio03")
                            label(for="fallbackRadio03") LMS발송
                        .cont_block_bundle  
                          .custom_textarea
                            textarea
                          p.caution ※ RCS 메시지 발송에 실패했을 경우, SMS나 LMS로 문자를 발송할 수 있습니다. 
                .accordion_content
                  h2.blind 발송설정 탭
                  .accordion_head
                    a(href="javascript:void(0)")
                      h3.accordion_title 발송 설정
                  .accordion_body 
                    .wrap_bundle  
                      .item_bundle
                        strong.tit_bundle 받는사람
                        .cont_bundle
                          .bundle_sub.btn_receive_address
                            .btn_wrap
                              a(href="javascript:void(0)").btn.gray.mid <span>주소록</span>
                              a(href="javascript:void(0);").btn.bd_gray.big <span>대량등록</span>
                            a(href="javascript:void(0);").btn.help <span>도움말</span>
                          .bundle_sub.receive_textarea
                            .custom_textarea
                              textarea
                            a(href="javascript:void(0);").btn.gray.big.btn_add_phone_number <span>추가</span>
                          .bundle_sub.list_box
                            ul.receive_list
                              li 010-1234-1234
                                a(href="javascript:void(0);").btn.btn_delete_list
                              li 010-1234-1234
                                a(href="javascript:void(0);").btn.btn_delete_list
                              li 010-1234-1234
                                a(href="javascript:void(0);").btn.btn_delete_list
                              li 그룹명(인원)명
                              li 대량등록 (상위 10명) 노출
                            .receive_view
                              p 총 <span>10</span>명
                              a(href="javascript:void(0);").btn.btn_all_delete 전체삭제
                      .item_bundle
                        strong.tit_bundle 발신번호
                        .cont_bundle
                          span.custom_select.select_call_number
                            select(name="" id="" title="발신번호선택")
                              option 발신번호선택
                              option 발신번호선택
                              option 발신번호선택
                      .item_bundle
                        strong.tit_bundle 발송일자
                        .cont_bundle
                          .cont_block_bundle
                            span.custom_radio
                              input(type="radio" name="time_Radio" id="minute")
                              label(for="minute") 즉시발송
                            span.custom_radio
                              input(type="radio" name="time_Radio" id="second")
                              label(for="second") 예약발송
                          .cont_block_bundle
                            .cont_flex_bundle
                              span.custom_input.input_btn
                                input(type="text" placeholder="20190701")
                              span.custom_select
                                select(name="" id="" title="시간을 선택 해주세요")
                                  option(value="") 시간을 선택 해주세요.
                                  -for(i=1; i < 25; i++)
                                    option(value="") #{i} (시간)
                              span.custom_select.select_form
                                select(name="" id="" title="분을 선택 해주세요")
                                  option(value="") 분을 선택 해주세요.
                                  -for(i=0; i < 60; i++)
                                    option(value="") #{i} (분)
                          
                      
                      
                  
        .preview_wrap
          .view_area
            .view_cont
              p.ad_top_text (광고) 브랜드명
              .scroll_area
                .img_area
                  img(src="../images/dummy/sian_a/view_img.png" title="광고이미지")
                .desc_area
                  .inner_desc
                    h4.title 타이틀 영역
                    p.text  내용 영역
                  .btn_wrap 
                    a(href="javascript:void(0);").btn.mid 버튼1
                    a(href="javascript:void(0);").btn.mid 버튼2
              p.ad_bottom_text 무료수신거부 : 
          .btn_wrap
            a(href="javascript:void(0)").btn.big.bd_blue
              span 저장
            a(href="javascript:void(0)").btn.big.bd_blue
              span 테스트발송
            a(href="javascript:void(0)").btn.big.blue.full_width
              span 발송요청

    .footer_wrap
